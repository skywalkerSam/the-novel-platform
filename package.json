{
  "name": "the-novel-platform",
  "version": "0.3.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun next build",
    "check": "next lint && tsc --noEmit",
    "dev": "bun next dev",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "bun next start",
    "typecheck": "tsc --noEmit",
    "predev": "bun run typegen",
    "prebuild": "bun run typegen",
    "typegen": "sanity schema extract --enforce-required-fields && sanity typegen generate"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@clerk/nextjs": "^6.18.0",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.0",
    "@sanity/client": "^7.11.0",
    "@sanity/image-url": "1",
    "@sanity/vision": "4",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@types/markdown-it": "^14.1.2",
    "@uiw/react-md-editor": "^4.0.8",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "markdown-it": "^14.1.0",
    "next": "16.1.1",
    "next-sanity": "10",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sanity": "4",
    "sanity-plugin-markdown": "^6.0.0",
    "server-only": "^0.0.1",
    "shadcn": "^3.6.3",
    "slugify": "^1.6.6",
    "sonner": "^2.0.7",
    "styled-components": "6",
    "tailwind-merge": "^3.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/node": "^20.14.10",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.23.0",
    "eslint-config-next": "16.1.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.15",
    "tw-animate-css": "^1.2.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "pnpm@10.27.0",
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
